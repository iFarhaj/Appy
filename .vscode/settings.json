{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.configPath": "./prettier.config.js",

  "eslint.experimental.useFlatConfig": true, // For ESLint flat config
  "eslint.lintTask.enable": true, // Enable linting in tasks
  "eslint.options": { // Additional ESLint options
    "overrideConfigFile": "./eslint.config.mjs"
  },
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue",
    "markdown"
  ],
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml"
  ]
}
